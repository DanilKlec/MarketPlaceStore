@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NewsStore.API.ViewModels.TidingsActionModel
<head>
    <link rel="stylesheet" href="css/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
@if (Model != null)
{
    <div class="item-details-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <div class="line-dec"></div>
                        <h2>Детально о <em>новости</em></h2>
                    </div>
                </div>
            </div>
            <form id="contact" asp-action="DetailNews" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">@Html.DisplayFor(model => model.Name)</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">@Html.DisplayFor(model => model.Description)</label>
                    </div>
                </div>
                <div class="row" style="justify-content: center;">
                    <div class="col-lg-6">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i> Закрыть</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NewsStore.API.ViewModels.UserModel
<head>
    <link rel="stylesheet" href="css/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
@if (Model != null)
{
    <div class="item-details-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <div class="line-dec"></div>
                        <h2>Удаление <em>пользователя</em></h2>
                    </div>
                </div>
            </div>
            <form id="contact" asp-action="Delete" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Логин:</label>
                            <label class="control-label">@Html.DisplayFor(model => model.UserName)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Пароль:</label>
                            <label class="control-label">@Html.DisplayFor(model => model.Password)</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Роль:</label>
                            <label class="control-label">@Html.DisplayFor(model => model.RoleName)</label>
                        </div>
                    </div>
                </div>
                <div class="alert alert-danger" role="alert">
                    Вы уверены что хотите удалить пользователя?
                </div>
                <div class="row" style="justify-content: center;">
                    <div class="col-lg-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" value="Delete" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i> Удалить</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i> Закрыть</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
